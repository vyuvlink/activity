<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.act.dao.HelloDao">

    <resultMap id="BaseResultMap" type="cn.com.act.po.ActivityPo">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="scheme_id" jdbcType="BIGINT" property="scheme_id"/>
        <result column="state" jdbcType="TINYINT" property="state"/>
        <result column="start_time" jdbcType="INTEGER" property="start_time"/>
        <result column="end_time" jdbcType="INTEGER" property="end_time"/>
        <result column="context_id" jdbcType="BIGINT" property="context_id"/>
        <result column="scene_id" jdbcType="CHAR" property="scene_id"/>
        <result column="type" jdbcType="TINYINT" property="type"/>
        <result column="rel_id" jdbcType="BIGINT" property="rel_id"/>
        <result column="cover" jdbcType="VARCHAR" property="cover"/>
    </resultMap>

    <insert id="generateActivitys" parameterType="list" useGeneratedKeys="true" keyProperty="id">
        insert into activity (id, name, start_time, end_time, cover)
        values
        <foreach collection="list" item="it" separator=",">
            (#{it.id,jdbcType=BIGINT},#{it.name,jdbcType=VARCHAR},#{it.start_time,jdbcType=INTEGER},#{it.end_time,jdbcType=INTEGER},#{it.cover,jdbcType=VARCHAR})
        </foreach>
    </insert>

    <insert id="generateSchemes" parameterType="list" useGeneratedKeys="true" keyProperty="id">
        insert into scheme (id, type)
        values
        <foreach collection="list" item="it" separator=",">
            (#{it.id,jdbcType=BIGINT},#{it.type,jdbcType=INTEGER})
        </foreach>
    </insert>

    <insert id="generateScenes" parameterType="list" useGeneratedKeys="true" keyProperty="id">
        insert into scheme (id, scene, param)
        values
        <foreach collection="list" item="it" separator=",">
            (#{it.id,jdbcType=INTEGER},#{it.type,jdbcType=CHAR},#{it.type,jdbcType=VARCHAR})
        </foreach>
    </insert>
</mapper>